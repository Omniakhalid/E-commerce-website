</head>
<h4>Option</h4>
<hr />
<div style ="margin-left:200px">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title">Add Options</h5>
          <button class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
             <form asp-action="Options" enctype="multipart/form-data"  style="font-size:13px;color:gray">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                 <div class="form-group">
                    <label asp-for="ProductID" class="control-label">Product</label>
                    <select asp-for="ProductID" class ="form-control" asp-items="ViewBag.ProductID"></select>
                </div>

                <div class="form-group">
                    <label asp-for="OptionID" class="control-label"></label>
                    <input asp-for="OptionID" class="form-control" />
                    <span asp-validation-for="OptionID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OptionName" class="control-label"></label>
                    <input asp-for="OptionName" class="form-control" />
                    <span asp-validation-for="OptionName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OptionGroupID" class="control-label"></label>
                    <select asp-for="OptionGroupID" class ="form-control" asp-items="ViewBag.OptionGroupID"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
             </form>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>

                </div>
            </div>
         </div>
</div>
       


