@model E_commerce_website.Areas.ProductArea.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="container">
    <div class="row">
    <div class="col-md-4">
        <form asp-action="Create"  enctype="multipart/form-data" >
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label"></label>
                <input asp-for="ProductID" class="form-control" />
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductWeight" class="control-label"></label>
                <input asp-for="ProductWeight" class="form-control" />
                <span asp-validation-for="ProductWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductShortDes" class="control-label"></label>
                <input asp-for="ProductShortDes" class="form-control" />
                <span asp-validation-for="ProductShortDes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductLongDes" class="control-label"></label>
                <input asp-for="ProductLongDes" class="form-control" />
                <span asp-validation-for="ProductLongDes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImageFile" class="control-label"></label>
                <input type="file" accept="image/*" asp-for="ProductImageFile" class="form-control" />
                <span asp-validation-for="ProductImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategoryID" class="control-label"></label>
                <select asp-for="ProductCategoryID" class ="form-control" asp-items="ViewBag.ProductCategoryID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductStock" class="control-label"></label>
                <input asp-for="ProductStock" class="form-control" />
                <span asp-validation-for="ProductStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorID" class="control-label"></label>
                <select asp-for="VendorID" class ="form-control" asp-items="ViewBag.VendorID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>

