<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_commerce_website</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css"> 
</head>
<body style="background-color:white">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="font-size:18px">
            <div class="container">
                <a class="navbar-brand " style="font-family:fantasy;font:400px" asp-area="" asp-controller="Home" asp-action="Index"> SHOPIFY</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex ">
                     <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a asp-action="Index"  style="background-color: #F3F6F9;border-radius: 30px;color: black;"><i style=" background-color: white;color:black; border-radius: 20px;" class="fa fa-fw fa-home"></i> Home</a>

                        </li>
                        <li class="nav-item">
                            <a asp-action="Create"><i class="fa actions"style=" background-color: white; border-radius: 20px;"></i> Create New Product</a>
                        </li>
                         <li class="nav-item">
                            <a asp-action="GetOrders"><i class="fa actions"style=" background-color: white; border-radius: 20px;"></i> Vendor Orders</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Options"><i class="fa actions"style=" background-color: white; border-radius: 20px"></i> Add Options</a>
                        </li>
                          
                    </ul>
          
                    <partial name ="~/Views/Shared/_LoginPartial.cshtml"/>
                   

                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - E_commerce_website - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
  
     <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js">
  </script>
  <script src="js/custom.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
  
</body>
</html>
