@model IEnumerable<E_commerce_website.Models.Order>

<link rel="stylesheet" href="~/css/CartStyle.css"> 


<body style="background-color:white">
     
        <div class="container">
        <div class="heading_container heading_center">
        <h2>
            Order History
        </h2>
        </div>
      

    @foreach(var item in Model){
        <div class="card mt-3">
            <div class="card-header">
            Order at Day @item.OrderDate
            </div>
            <div class="card-body">
                    <blockquote class="blockquote mb-3">
                        @foreach(var order in item.OrderDetails)
                            {
                                <p> Product @order.ProductName -> @order.Quanity </p>
                                <div style="float:right">
                                    <img src="~/dbImages/@order.Product.ProductImage"/>
                                </div>
                            }
                        <p>Total Price @item.OrderAmount</p>
                    </blockquote>
            </div>
        </div>
    }
          
    </div>   
      
</body>


