<link rel="stylesheet" href="~/css/CartStyle.css"> 


<body>

<div class="card">
    <div class="row">
        <div class="col-md-8 cart">
            <div class="title">
                <div class="row">
                    <div class="col">
                        <h4><b>Order Details</b></h4>
                    </div>
                </div>
            </div>
           
              <div class="row">
               
                <form style="display:contents" asp-action="create" asp-controller="Orders">
                   
                        <div class="input-group row  mb-3 mx-3"> <input type="text" class="form-control" placeholder="Name"> </div>
                        <div class="input-group  mb-3 mx-3"> <input type="text" class="form-control" name="OrderEmail"  placeholder="Email"> </div>
                        <div class="input-group  mb-3 mx-3"> <input type="text" class="form-control" name="OrderPhone" placeholder="Phone Number"> </div>
                        <div class="input-group  mb-3 mx-3"> <input type="text" class="form-control" name="ShippingAddress" placeholder="Street address"> </div>
                        <div class="input-group  mb-3 mx-3"> <input type="text" class="form-control" name="OrderCity" placeholder="City"> </div>
                        <div class="input-group  mb-3 mx-3"> <input type="text" class="form-control" name="OrderCountry"  placeholder="Country"> </div>
                        <button type="submit" value="Submit"/>
                </form>
                   
              </div>    
             
         
            <div class="back-to-shop">
             <a asp-action="Index" asp-controller="Cart" asp-area="ClientArea">
              <i class="fa fa-arrow-alt-circle-left"></i>
             </a>   
             <span class="text-muted">Back to Cart </span>
            </div>

        </div>


        <div class="col-md-4 summary">
            <div class="py-2">
                <h4><b>Payment Deatils</b></h4>
            </div>
            <hr>
          
            <form>
                   <div class="row"><input type="text" id="cname" name="cardname" class="form-control" placeholder="Name on Card"></div> 
                   <div class="row"><input type="text" id="ccnum" name="cardnumber" class="form-control" placeholder="Credit Card Number"></div> 
                   <div class="row"><input type="text" id="expmonth" name="expmonth" class="form-control" placeholder="Exp Month"></div> 
                   <div class="row">
                       <div class="col-7">

                            <input type="text" id="expyear" name="expmonth" class="form-control" placeholder="Exp Year">
                       </div>

                       <div class="col-5">

                            <input type="text" id="cvv" name="cvv" class="form-control" placeholder="CVV">
                       </div>
                    </div> 
                    
                    <a asp-action="PaymentwithPaypal" asp-controller="Payment" asp-area=""> Check EL 5ra</a>
            </form>
            <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                <div class="col">TOTAL PRICE</div>
            </div> <button class="btn">CHECKOUT</button>
        </div>

    </div>
</div>
</body>

