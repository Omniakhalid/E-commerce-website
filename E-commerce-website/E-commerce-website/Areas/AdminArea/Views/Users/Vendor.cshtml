@{
    ViewData["title"] = "Users";
}
@model IEnumerable<UserModel>

    <table class="table table-striped mt-4">
    
        <tr class="bg-primary text-white">
            <th>First Name</th>
            <th>City</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Role</th>
            <th>Actions</th>
           
        </tr>
  
        @foreach(var user in Model)
        {
            <tr>
               
            @if (@user.Roles.Contains("Vendor") &&!@user.Roles.Contains("Admin") )
            {
                 <td>@user.FirstName</td>
                <td>@user.City</td>
                <td>@user.Phone</td>
                <td>@user.Address</td>
                <td>User</td>
                //<td><a class="btn btn-primary" asp-controller="Users" asp-action="ManageRoles" asp-route="@user.Id">Manage Roles</a></td> 
            }
            
            </tr>
            
        }
   
</table>